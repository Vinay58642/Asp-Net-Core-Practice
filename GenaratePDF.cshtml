@model IEnumerable<PersonResponse>

@{
    Layout = null;
}

<link href="@("http://"+Context.Request.Host.ToString()+"/StyleSheet_CRUD.css")" rel="stylesheet"/>   
    <table class="table w-100 mt">
        <thead>
            <tr>
                <th>Person Name</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Gender</th>
                <td>Country</td>
                <th>Address</th>
                <th>Receive News Letters</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PersonResponse person in Model)
            {
                <tr>
                    <td>@person.PersonName</td>
                    <td>@person.Email</td>
                    <td>@person.DateofBirth?.ToString("dd MMM yyyy")</td>
                    <td>@person.Age</td>
                    <td>@person.Gender</td>
                    <td>@person.Country</td>
                    <td>@person.Address</td>
                    <td>@person.ReceivNewsLetters</td>
                </tr>
            }

        </tbody>
    </table>

